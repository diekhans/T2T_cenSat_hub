#!/usr/bin/gawk -f

# Convert BED chroms that named in the form tig00018121:0-1387635,
# but cover the whole contig.  Just pass through it the name is
# simple.
BEGIN {
      FS = "\t";
      OFS = "\t";
}
{
    patsplit($1, a, "[a-z0-9]+");
    if (a[2] != "") {
        if (a[2] != "0") {
            print "ERROR: contig name not in expected form:", $1 >"/dev/stderr"
            exit(1)
        }
        $1 = a[1];
    }
    print $0
}
